# Scheduler Service Environment Variables

# Application Settings
APP_NAME=scheduler
DEBUG=false
LOG_LEVEL=info

# API Settings
API_HOST=0.0.0.0
API_PORT=8003

# Scheduler Configuration
SCHEDULER_ENABLED=true
DEFAULT_TIMEZONE=UTC
MAX_CONCURRENT_JOBS=10

# Job Settings
JOB_TIMEOUT=3600  # 1 hour in seconds
JOB_RETRY_DELAY=300  # 5 minutes
MAX_JOB_RETRIES=3

# Service URLs
ORCHESTRATOR_URL=http://orchestrator:8000
NOTION_SYNC_URL=http://notion-sync:8002
QDRANT_INTEGRATION_URL=http://qdrant-integration:8001
NOTIFICATIONS_URL=http://notifications:8004

# Authentication
JWT_SECRET=your-super-secret-jwt-key
API_KEY=your-api-key

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/scheduler_db

# Redis Configuration (for job queue)
REDIS_URL=redis://localhost:6379
REDIS_JOB_QUEUE=scheduler_jobs

# Monitoring
SENTRY_DSN=your-sentry-dsn