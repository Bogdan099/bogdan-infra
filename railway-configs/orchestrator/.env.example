# Orchestrator Service Environment Variables

# Application Settings
APP_NAME=orchestrator
DEBUG=false
LOG_LEVEL=info

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/orchestrator_db

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-orchestrator-api-key
CORS_ORIGINS=*

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Service Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# External Service URLs (when other services are deployed)
# QDRANT_INTEGRATION_URL=http://qdrant-integration:8001
# NOTION_SYNC_URL=http://notion-sync:8002
# SCHEDULER_URL=http://scheduler:8003
# NOTIFICATIONS_URL=http://notifications:8004

# Monitoring & Observability
SENTRY_DSN=your-sentry-dsn
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=5

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000