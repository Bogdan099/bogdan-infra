# Notifications Service Environment Variables

# Application Settings
APP_NAME=notifications
DEBUG=false
LOG_LEVEL=info

# API Settings
API_HOST=0.0.0.0
API_PORT=8004

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Push Notifications
FIREBASE_CREDENTIALS_PATH=/app/firebase-credentials.json
FCM_SERVER_KEY=your-fcm-server-key

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_DEFAULT_CHANNEL=#general

# Telegram Integration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Service URLs
ORCHESTRATOR_URL=http://orchestrator:8000
SCHEDULER_URL=http://scheduler:8003

# Authentication
JWT_SECRET=your-super-secret-jwt-key
API_KEY=your-api-key

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/notifications_db

# Redis Configuration (for message queue)
REDIS_URL=redis://localhost:6379
REDIS_NOTIFICATION_QUEUE=notifications

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
SENTRY_DSN=your-sentry-dsn